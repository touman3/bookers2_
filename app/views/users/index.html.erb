<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/newform', book: @book, user: @user%>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>