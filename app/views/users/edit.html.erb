<div class="container">

  <div>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: edit_user_path(@user.id), method: :patch do |f| %>

        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, :class => 'form-control name'%>
        </div>

        <div class="form-group">
          <label>Image</label>
          <%= f.file_field :profile_image, accept: "image/*", :class => 'form-control-file user_image' %>
        </div>

        <div class="form-group">
          <label>Introduction</label>
          <%= f.text_area :introduction, :class => 'form-control introduction' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", :class => 'btn btn-secondary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>